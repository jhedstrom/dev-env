################################################################################
#
# MySQL configuration optimized for Drupal development.
#
# From: An OS X Drupal development environment with Homebrew
#       http://jeffbeeman.com/node/319
#
################################################################################


[client]
default-character-set=utf8

[mysql]
default-character-set=utf8

[mysqld]
default-storage-engine=InnoDB
collation-server = utf8_unicode_ci
init-connect='SET NAMES utf8'
character-set-server = utf8

# Performance tuning
innodb_buffer_pool_size = 160M
join_buffer_size = 4M
tmp_table_size = 64M
max_heap_table_size = 64M
sort_buffer_size = 6M
read_rnd_buffer_size = 4M
key_buffer = 16M
max_allowed_packet = 128M
thread_stack = 256K
thread_cache_size = 8
table_open_cache = 64
innodb_flush_log_at_trx_commit = 2
query_cache_limit = 32M
query_cache_size = 128M
query_cache_type = 1
